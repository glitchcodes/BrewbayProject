<style>
    .card-body {
        background-color: #f7e7ce;
        padding: 15px;
    }

    .order-section {
        background-color: #fff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    .row {
        margin-top: 10px;
    }

    label {
        font-weight: bold;
        color: #555;
        margin-bottom: 5px;
    }

    span {
        color: #777;
        display: block;
        margin-top: 3px;
    }
</style>

<div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Order History</h5>
      </div>
    <div class="card-body">
        <div class="order-section mb-3">
            @foreach (var order in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        @order.CreatedAt
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <h5 class="mb-3">Items</h5>
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <td>Name</td>
                                        <td>Quantity</td>
                                        <td>Type</td>
                                        <td>Price</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Size</td>
                                            <td>@(item.Product.Price * item.Quantity)</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-6">
                                <h5 class="mb-3">Order Information</h5>
                                
                                <p>Reference ID: @order.ReferenceId</p>
                                <p>Total amount: &#8369;@order.OrderPayment.AmountPaid</p>
                                <p>Status: @order.Status</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>