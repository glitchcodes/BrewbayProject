@model BrewbayProject.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>


    .full-height {
        height: calc(100vh - 72px);
    }
    .login-form {
        min-width: 300px;
    }
    
    .alert-danger ul {
        list-style: none;
    }

    body {
        background: url("/public/images/loginregiskg.png") center/cover no-repeat;
        height: 100vh;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }


    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        background: #f7e7ce;
        border-radius: 10px;
    }

    .center h4 {
        text-align: center;
        padding: 20px 0 25px 0;
        border-bottom: 1px solid brown;
    }

    .center form {
        padding: 0 40px;
        box-sizing: border-box;
    }

    form .form-outline {
        position: relative;
        border-bottom: 2px solid #adadad;
        margin: 30px 0;
    }

    .form-outline input {
        width: 100%;
        padding: 0 5px;
        height: 40px;
        border: none;
        background: none;
        outline: none;
    }

    .form-outline label {
        position: relative;
        top: 50%;
        left: 5px;
        color: #adadad;
        transform: translateY(20%);
        transform: translate(-8%);
        pointer-events: none;
        transition: .5s;
    }

    .form-outline span::before {
        content: '';
        position: absolute;
        top: 40px;
        left: 0;
        width: 0%;
        height: 2px;
        background: #f7e7ce;
    }

    .form-outline input:focus ~ label,
    .form-outline input:valid ~ label {
        top: -5px;
        color: brown;
    }

    .form-outline input:focus ~ span::before,
    .form-outline input:valid ~ span::before {
        width: 100%
    }
    
    .form-check {
        margin: -5px 0 20px 5px;
        color: brown;
        cursor: pointer;
    }

    .form-check:hover {
        text-decoration: underline;
    }

    .test {
        width: 100%;
        height: 50px;
        border: 1px solid;
        background: brown;
        border-radius: 20px;
        color: #f7e7ce;
        font-weight: 700;
        cursor: pointer;
        outline: none;
        margin: 0 0 25px 0;
    }

    .test:hover {
        border-color: #adadad;
        transition: .5s;
    }

    </style>

<body>
    <div class = "center">
        <h4 class="fw-bold">Login to Brewbay</h4>
         
    <form asp-action="Login">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-danger mb-4" asp-validation-summary="All"></div>
            }
            
            
            <div class="form-outline">
                <label class="form-label" asp-for="Username"></label>
                <span></span>
                <input type="text" class="form-control" asp-for="Username"/>
            </div>

            <div class="form-outline">
                <label class="form-label" asp-for="Password"></label>
                <span></span>
                <input type="password" class="form-control" asp-for="Password"/>
            </div>

            <div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="RememberMe"></label>
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"/>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="test btn btn-primary btn-block">Log In</button>

            <a class="test btn btn-secondary btn-block" asp-controller="Account" asp-action="Register">
                Sign Up
            </a>
        </form>
    </div>
        </body>