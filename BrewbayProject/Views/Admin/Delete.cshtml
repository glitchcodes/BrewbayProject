@{
  ViewData["Title"] = "Delete Product";
}

@model BrewbayProject.Models.Product;

<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card mb-4">
        <div class="card-header py-3">
          <div class="flex align-items-center">
            <h5 class="mb-0 d-flex fw-medium text-danger">Are you sure you want to delete this product?</h5>
          </div>
        </div>

        <div class="card-body">
          <!-- EDIT FORM -->
          <table class="table">
            <tbody>
              <tr>
                <th>Name</th>
                <td>@Model.Name</td>
              </tr>
              <tr>
                <th>Description</th>
                <td>@Model.Description</td>
              </tr>
              <tr>
                <th>Image</th>
                <td><img src="@Model.Image" class="img-fluid w-25"></td>
              </tr>
              <tr>
                <th>Price</th>
                <td>@Model.Price</td>
              </tr>
            </tbody>
          </table>

          <form asp-action="Delete" method="post" class="d-block container">
            <div class="mt-3 d-flex gap-3 row">
              <button type="submit" class="btn btn-secondary cancel-btn col" asp-action="DeleteProduct"
                asp-route-id="-1">Cancel</button>
              <button type="submit" class="btn btn-danger delete-btn col" asp-action="DeleteProduct"
                asp-route-id="@Model.Id">Delete</button>
            </div>
          </form>
          <!-- END FORM -->
        </div>
      </div>
    </div>
  </div>
</div>
