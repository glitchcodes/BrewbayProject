@model BrewbayProject.Models.Product;

@{
  ViewData["Title"] = "Add Product";
}

<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card mb-4">
        <div class="card-header py-3">
          <div class="flex align-items-center">
            <h5 class="mb-0 d-flex fw-medium">Add Product</h5>
          </div>
        </div>

        <div class="card-body">
          <!-- ADD FORM -->
          <form asp-action="Add" method="post">
            <div class="mb-3">
              <label for="productName" class="form-label">Name</label>
              <input id="productName" asp-for="Name" class="form-control" />
              <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
              <label for="productDescription" class="form-label">Description</label>
              <textarea id="productDescription" asp-for="Description" class="form-control"></textarea>
              <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
              <label for="productImage" class="form-label">Upload Image</label>
              <input id="productImage" asp-for="Image" class="form-control" />
              <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <div class="mb-3">
              <label for="productPrice" class="form-label">Price</label>
              <input id="productPrice" asp-for="Price" class="form-control" />
              <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <button type="submit" class="d-block btn btn-primary px-5 mx-auto">ADD PRODUCT</button>
          </form>
          <!-- END FORM -->
        </div>
      </div>
    </div>
  </div>
</div>
